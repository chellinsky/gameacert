<div class="row">
  <p id="notice"><%= notice %></p>
</div>
  <div class="row">
    <div class="span12">
      <div class="well">
        <h2 class="text-center"><%= @space.name %></h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <p><%= @space.detail %></p>
    </div>
  </div>

  <div class="span12">
    <%= link_to 'Edit', edit_game_space_path(@game, @space) %> | <%= link_to 'Back to Space List', game_spaces_path(@game) %>
  </div>

  <div class="row" id="padtop">
    <div class="span12">
      <h4>Tasks for <%= @space.name %></h4>
    </div>
  </div>

  <div class='row'>
    <div class="span12">
      <table class="table table-hover">
        <tr>
            <th>Task Name</th>
            <th>Learning Objectives</th>
            <th>Type</th>
        </tr>
        <% @space.tasks.each do |task| %>
            <tr>
                <td><%= link_to task.name, space_task_path(@space, task) %></td>
                <td><%= task.description %></td>
                <td><%= task.trainingtype %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="span12">
    <%= link_to 'New Task', new_space_task_path(@space) %> | <%= link_to 'Edit Tasks', space_tasks_path(@space) %>
  </div>
