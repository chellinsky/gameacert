<h1>List Spaces</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Topic</th>
    <th>Detail</th>
    <th>Game ID</th>
    <th>Game Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @game.spaces.each do |space| %>
  <tr>
    <td><%= space.name %></td>
    <td><%= space.topic %></td>
    <td><%= space.detail %></td>
    <td><%= space.game_id %></td>
    <td><%= space.gameorder %></td>
    <td><%= link_to 'Show', game_space_path(@game, space) %></td>
    <td><%= link_to 'Edit', edit_game_space_path(@game, space) %></td>
    <td><%= link_to 'Destroy', game_space_path(@game, space), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

