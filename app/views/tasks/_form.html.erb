<%= simple_form_for([@space, @task], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => 'span9' } %>
    <%= f.input :description, :input_html => { :class => 'span9' } %>
    <%= f.input :contents, :input_html => { :class => 'span9' } %>
    <%= f.input :trainingtype, :input_html => { :class => 'span9' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
