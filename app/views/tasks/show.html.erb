<div class="row">
  <p id="notice"><%= notice %></p>
</div>
<% if user_signed_in? %>

  <div class="row">
    <div class="span12">
      <div class="well">
        <h2 class="text-center"><%= @task.name %></h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <p>Task Description: <%= @task.description %></p>
      <% if @task.trainingtype == 0 %>
        <% @survey =  Survey::Survey.active.first %>
        <% @attempt = @survey.attempts.new %>
        <% @attempt.answers.build %>
        <% @participant = current_user # you have to decide what to do here %>
        <%= simple_form_for(@attempt, :url => quizzes_attempts_path) do |f| %>
          <%= f.fields_for :answers do |builder| %>
            <ul>
              <% @survey.questions.each_with_index do |question, index| %>
                <li>
                  <p><%= question.text %></p>
                  <%= hidden_field_tag "survey_attempt[answers_attributes][#{index}][question_id]", question.id %>
                  <% question.options.each do |option| %>
                    <%= check_box_tag "survey_attempt[answers_attributes][#{index}][option_id]", option.id %>
                    <%= option.text %> <br/ >
                  <% end -%>
                </li>
              <% end -%>
            </ul>
          <% end -%>
        <%= f.submit "Submit" %>
      <% end -%>

      <% elsif @task.trainingtype == 1  %>
        <p>This is a video task</p>
      <% else %>
        <p>This is a task of an unkown type</p>
      <% end %>
    </div>
  </div>

  <div class="row" id="padtop">
    <div class="span8">
      <div class="well">
        <h4>Learning Objectives:</h4>
        <p><%= @task.description %></p>
      </div>
    </div>
    <div class="span4" id="padtop">
      <p class="text-center"><a href="#" class="btn btn-primary btn-large">Record Completion</a></p>
    </div>
  </div>

  <div class="span12">
    <%= link_to 'Edit', edit_space_task_path(@space, @task) %> | <%= link_to 'Back to Task List', space_tasks_path(@space) %>
  </div>

<% else %>
  <p>Please <%= link_to 'register', register_path %> or <%= link_to 'log in', login_path %> to play a game</p>
<% end %>
