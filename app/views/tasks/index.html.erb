<div class="row">
  <p id="notice"><%= notice %></p>
</div>
<% if user_signed_in? %>

    <div class="row">
        <div class="span12">
            <div class="well">
                <h2 class="text-center">Task List for <%= @space.name %></h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <table class="table table-hover">
                <tr>
                    <th>Task Name</th>
                    <th>Learning Objectives</th>
                    <th>Type</th>
                    <th></th>
                </tr>

                <% @space.tasks.each do |task| %>
                    <tr>
                        <td><%= link_to task.name, space_task_path(@space, task) %></td>
                        <td><%= task.description %></td>
                        <td><%= task.trainingtype %></td>
                        <td><%= link_to 'Destroy', space_task_path(@space, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>

    <div class="span12">
        <%= link_to 'New Task', new_space_task_path %> | <%= link_to 'Back to Space', game_space_path(@space.game_id, @space) %>
    </div>
  
  <% else %>
    <p>Please <%= link_to 'register', register_path %> or <%= link_to 'log in', login_path %> to play a game</p>
  <% end %>
</div>