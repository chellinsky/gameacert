    <div class="row">
        <div class="span12">
            <div class="well">
                <h2 class="text-center">Task List for <%= @space.name %></h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <table class="table table-hover">
                <tr>
                    <th>Task Name</th>
                    <th>Learning Objectives</th>
                    <th>Type</th>
                    <% if can? :destroy, Task %><th></th><% end %>
                </tr>

                <% @space.tasks.each do |task| %>
                    <tr>
                        <td><%= link_to task.name, space_task_path(@space, task) %></td>
                        <td><%= task.description %></td>
                        <td><%= task.trainingtype %></td>
                        <% if can? :destroy, Task %><td><%= link_to 'Destroy', space_task_path(@space, task), method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>

    <div class="span12">
        <% if can? :new, Task %>
            <%= link_to 'New Task', new_space_task_path %> | 
        <% end %>
        <%= link_to 'Back to Space', game_space_path(@space.game_id, @space) %>
    </div>
  
</div>