<% if can? :edit, Game %>
	<h1>Overall Game Information</h1>

	<%= render 'form' %>

	<h2>Existing Spaces</h2> <%= link_to 'Edit Spaces', game_spaces_path(@game) %>
	<div class='row'>
		<div class='span2'><strong>Name: </strong></div>
		<div class='span3'><strong>Topic: </strong></div>
		<div class='span6'><strong>Detail: </strong></div>
		<div class='span1'><strong>Game Order: </strong></div>
	</div>
	<% @game.spaces.each do |space| %>
		<div class='row'>
			<div class='span2'><%= space.name %></div>
			<div class='span3'><%= space.topic %></div>
			<div class='span6'><%= space.detail %></div>
			<div class='span1'><%= space.gameorder %></div>
		</div>
	<% end %>


	<%= link_to 'Show', @game %> |
	<%= link_to 'Back', games_path %>
<% else %>
	<p>You must be logged in as an administrator to edit a game</p>
<% end %>