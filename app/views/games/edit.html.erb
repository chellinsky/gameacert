<% if user_signed_in? %>
	<h1>Overall Game Information</h1>

	<%= render 'form' %>

	<h2>Existing Spaces</h2> <%= link_to 'Edit Spaces', game_spaces_path(@game) %>
	<div class='row'>
		<div class='span2'><strong>Name: </strong></div>
		<div class='span3'><strong>Topic: </strong></div>
		<div class='span6'><strong>Detail: </strong></div>
		<div class='span1'><strong>Game Order: </strong></div>
	</div>
	<% @game.spaces.each do |space| %>
		<div class='row'>
			<div class='span2'><%= space.name %></div>
			<div class='span3'><%= space.topic %></div>
			<div class='span6'><%= space.detail %></div>
			<div class='span1'><%= space.gameorder %></div>
		</div>
	<% end %>

	<h3>Add a Space</h3>
	<%= simple_form_for([@game, @game.spaces.build], :html => {:class => 'form-horizontal'}) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name, :input_html => { :class => 'span9' } %>
	    <%= f.input :topic, :input_html => { :class => 'span9' } %>
	    <%= f.input :detail, :input_html => { :class => 'span9' } %>
	    <%= f.input :gameorder, :input_html => { :class => 'span9' }, :hint => 'This is the order in which spaces will appear in linear games' %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>


	<%= link_to 'Show', @game %> |
	<%= link_to 'Back', games_path %>
<% else %>
	<p>You must be logged in as an administrator to make a new game</p>
<% end %>