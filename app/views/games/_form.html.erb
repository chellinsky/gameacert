<%= simple_form_for @game, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => 'span9' }, :hint => 'Game name must be unique' %>
    <%= f.input :short_name, :input_html => { :class => 'span9' }, :hint => 'Game short name must be unique.  It provides a direct link to the game.' %>
    <%= f.input :description, :input_html => { :class => 'span9' } %>
    <%= f.input :gamepic, :input_html => { :class => 'span9' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
