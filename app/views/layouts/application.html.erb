<!DOCTYPE html>
<html>
<head>
  <title>Gameacert</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="row">
	<nav>
		<ul class="row">
			<li class="one half">
				<%= link_to raw("<i class='icon-home'></i> Game-A-Cert"), root_path %>
			</li>
				<% if user_signed_in? %>
				<li class="menu one sixth">
					<a href="#"><i class="icon-user"></i> profileName</a>
					<ul>
						<li><a href="#">Dashboard</a></li>
						<li><a href="#">Accomplishments</a></li>
						<li><a href="#">Settings</a></li>
					</ul>
				<% else %>
				<li class="one sixth">
					<%= link_to raw("<i class='icon-thumbs-up'></i> Register"), register_path %>
				<% end %>
			</li>
			<li class="menu one sixth">
				<a href="#"><i class="icon-road"></i> Games</a>
				<ul>
					<li><a href="#">Current Games</a></li>
					<li><a href="#">Finished Games</a></li>
					<li><a href="#">Available Games</a></li>
				</ul>
			</li>
			<li class="one sixth">
				<% if user_signed_in? %> 
					<%= link_to raw("<i class='icon-signout'></i> Log Out"), logout_path %>
				<% else %> 
					<%= link_to raw("<i class='icon-signin'></i> Log In"), login_path %>
				<% end %>
			</li>
		</ul>
	</nav>
</div>
<div class="containter">
	<div class="padded">

		<% flash.each do |type, message| %>
			<div class="row">
				<div class="one centered half">
					<div class="important message">
						<%= message %>
					</div>
				</div>
			</div>

		<% end %>

<%= yield %>

	</div>
</div>
</body>
</html>
